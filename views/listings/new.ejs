<% layout("/layouts/boilerplate") %>
<body>
    <div>
        <div class="row mt-3" >
            
            <div class="col-8 offset-2">
                <h3>Add New Listing</h3>
                <form action="/listings" method="post" novalidate class="needs-validation">
                    <br>
                    <div class="md-3">
                        <label for="title" class="form-label">Title:</label>
                        <input class="form-control" type="text" required id="title" placeholder="Enter a cachy title." name="Listing[title]">
                        <div class="valid-feedback">Titile Looks Good!</div>
                        <div class="invalid-feedback">Title should be required</div>
                    </div>
                    <br>
                    <div class="md-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" placeholder="Enter Description" name="Listing[description]" id="description" cols="30" rows="4"></textarea>
                        <div class="valid-feedback">Description Looks Good!</div>
                        <div class="invalid-feedback">Description should be required</div>
                    </div>
                    <br>
                    <div class="md-3">
                        <label for="image" class="form-label">Image URL</label>
                        <input class="form-control" type="text" placeholder="Image Link" id="image.url" name="Listing[image{url}]">
                        <div class="valid-feedback">Link Looks Good!</div>
                    </div>
                    <br>
                    <div class="row">
                        
                        <div class="col-12 col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <div class="md-3">
                                <label for="price" class="form-label">Price</label>
                                <input class="form-control" placeholder="price per night" type="number" name="Listing[price]" id="price">
                                <div class="valid-feedback">Price Looks Good!</div>
                                <div class="invalid-feedback">Price should be required</div>
                            </div>
                        </div>

                        
                        <div class="col-12 col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <div class="md-3">
                                <label for="country" class="form-label">Country</label>
                                <input class="form-control"  placeholder="India, UK, America" type="text" id="country" name="Listing[country]">
                                <div class="valid-feedback">Country Looks Good!</div>
                                <div class="invalid-feedback">Country should be required</div>
                            </div>
                        </div>
                        
                        
                    </div>


                    <div class="md-3">
                        <label for="location:" class="form-label">Location</label>
                        <input class="form-control" required placeholder="Pune, Goa, Beed, Jaipur" type="text" id="location" name="Listing[location]">
                        <div class="valid-feedback">Location Looks Good!</div>
                        <div class="invalid-feedback">Location should be required</div>
                    </div>
                    <br>
        
    
                    <div class="md-3">
                        <button class="btn btn-dark add-btn">Add</button>
                        <br><br>
                    </div>
                    
                </form>
            </div>
            
        </div>
    </div>
</body>
