<% layout("/layouts/boilerplate") %>
<body>
    <div class="container">
        <h3>Add New Listing</h3>
        <form action="/listings" method="post">
            <br>
            <label for="title">Title:</label>
            <input type="text" id="title" name="Listing[title]">
            <br>
            <label for="description">Description</label>
            <input type="text" id="description" name="Listing[description]">
            <br>
            <label for="image">Image URL</label>
            <input type="text" id="image.url" name="Listing[image{url}]">
            <br>
            <label for="price">Price:</label>
            <input type="number" name="Listing[price]" id="price">
            <br>
            <label for="location:">Location</label>
            <input type="text" id="location" name="Listing[location]">
            <br>
            <label for="country">Country</label>
            <input type="text" id="country" name="Listing[country]">
            <br>
            <button>Add</button>
            
        </form>
    </div>
</body>
