<% layout("/layouts/boilerplate") %>
<body>
    <div class="contener">
        <h3>All Listings</h3>
        <!-- <a href="/listings/new">Add New Listings</a> -->
        <div class="row row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of listings){ %>
                <a href="/listings/<%=listing._id%>">
                    <div class="card">
                        <img class="card-img-top" src="<%=listing.image.url%>" alt="<%=listing.image.filenmae%>" style="height: 20rem;" >
                        <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div>
                        <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%> </b>
                            <br>
                            &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                        </p>
                        </div>
                    </div> 
                </a>
            <% } %>
        </div>
        
    </div>
</body>
